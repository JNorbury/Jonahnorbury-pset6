<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jnorbury.jonahnorbury_pset6">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:type="android.permission.GET_ACCOUNTS" />
    <uses-permission android:type="android.permission.READ_PROFILE" />
    <uses-permission android:type="android.permission.READ_CONTACTS" />
    <uses-permission android:type="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/plant_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:type=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:type="android.intent.action.MAIN" />

                <category android:type="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:type=".SearchPlantActivity" />
        <activity android:type=".ShowPlantActivity" />
        <activity android:type=".EmailPasswordActivity" />
    </application>

</manifest>